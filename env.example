# Keepsakes Environment Configuration
# Copy this file to .env and update the values as needed

# Application Configuration
APP_NAME=Keepsakes
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Database Configuration (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=keepsakes_user
DB_PASS=your_password_here
DB_NAME=keepsakes_db

# Google Analytics (optional - can be set during first-time setup)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Docker Compose Environment Variables
# These are used when running with docker-compose
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# APP_NAME=My Event Keepsakes
# APP_URL=https://mykeepsakes.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Security (for production)
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

